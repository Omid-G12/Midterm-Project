  <body>
    <%- include('partials/_header') %>
    <h1>Your Cart </h1>
    <form action="/checkout" method="POST">
      
    <div class="menu_display">
      <div class="aside"><img class="user" src="/images/menuitem1.jpg" width="100px"  /></div>
      <div class="menu_info">
        <p class="item-name">Item Name: Dish1</p>
        <p class="item-price">Item Price: $10</p>
      </div>
      <input type="button" value="+" class="increment" />
      <label class="display" data-product-id="" id=""> 3</label>
      <input type="button" value="-" class="decrement" />
      <button class="delete" type="button" class="btn btn-success">
        Delete
      </button>
      <button class="update" type="button" class="btn btn-success">
        Update
      </button>
    </div>

    <div class="menu_display">
      <div class="aside"><img class="user" src="/images/menuitem2.jpg" width="100px"  /></div>
      <div class="menu_info">
        <p class="item-name">Item Name: Dish2</p>
        <p class="item-price">Item Price: $20</p>
      </div>
      <input type="button" value="+" class="increment" />
      <label class="display" data-product-id="" id=""> 2</label>
      <input type="button" value="-" class="decrement" />
      <button class="delete" type="button" class="btn btn-success">
        Delete
      </button>
      <button class="update" type="button" class="btn btn-success">
        Update
      </button>
    </div>

    <div class="menu_display">
      <div class="col">
        <p id="totalprice"><strong><h5>Order Total : $200 </h5> </strong></p>
      </div>
      <button type="button" class="btn btn-success" id="place-order" >Place Order</button>
    </div>

 </form>
  </body>
</html>
