<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Foodie</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <h1>Your Cart </h1>

    <% for (let item of order) { %>
      <% if (item.quantity > 0 ) { %>
    <div class="menu_display">
      <img src=<%= item.image_url %>>
      <div class="menu_info">
        <p class="item-name">Item Name: <%= item.name %></p>
        <p class="item-price">Item Price: $<%= item.price %></p>
      </div>
      <input type="button" value="+" class="increment" />
      <label class="display" data-product-id="" id=""> 3</label>
      <input type="button" value="-" class="decrement" />
      <button class="delete" type="button" class="btn btn-success">
        Delete
      </button>
      <button class="update" type="button" class="btn btn-success">
        Update
      </button>
    </div>
    <% } %>
    <% } %>

    <div class="menu_display">
      <div class="col">
        <p id="totalprice"><strong><h5>Order Total : $<%= order.total %> </h5> </strong></p>
      </div>
      <button type="button" class="btn btn-success" id="place-order"  href="/confirmation"  >Place Order</button>
    </div>


  </body>
</html>
