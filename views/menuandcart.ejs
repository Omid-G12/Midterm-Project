<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Menu</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />
   
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <%- include('partials/_header') %>
    
    
    
    <h1>Menu Page</h1>
    <div id="only_menu">
      <div class="menu_display">
        <img class="user" src="/public/images/menumenu.jpg" />
        <div class="menu-info-and-button">
          <div class="menu_info">
            <p class="item-name">Item Name: Item 1</p>
            <p class="item-description">
              Item description: This is the most special dish of the restaurant
            </p>
            <p class="item-price">Item Price : $ 10</p>
          </div>

          <div class="menu_change">
            <input type="button" value="+" class="increment" onclick="" />
            <label class="display">1</label>
            <input type="button" value="-" class="decrement" onclick="" />
            <button class="add-to-cart" type="button" class="btn btn-success">
              Add To Cart
            </button>
          </div>
        </div>
      </div>

      <div class="menu_display">
        <img class="user" src="/public/images/menumenu.jpg" />
        <div class="menu-info-and-button">
          <div class="menu_info">
            <p class="item-name">Item Name: Item 2</p>
            <p class="item-description">
              Item description: This is the most tasty dish of the restaurant
            </p>
            <p class="item-price">Item Price : $ 20</p>
          </div>

          <div class="menu_change">
            <input type="button" value="+" class="increment" onclick="" />
            <label class="display">0</label>
            <input type="button" value="-" class="decrement" onclick="" />
            <button class="add-to-cart" type="button" class="btn btn-success">
              Add To Cart
            </button>
          </div>

          <div class="menu_display">
            <div class="col">
           <!---   <p id="totalprice"><strong>Order Total : $200 </strong></p> --->
            </div>
            <br>
            <button
              type="button"
              class="btn btn-success"
              id="place-order"
              href="/checkout"
            >
              Ready to checkout
            </button>
          </div>
        </div>
      </div>
    </div>





    <div id="only_cart">
      <h1>Your Cart </h1>
   
      <div class="menu_display">
        <div class="aside"><img class="user" src="ITEM IMAGE" /></div>
        <div class="menu_info">
          <p class="item-name">Item Name: Dish1</p>
          <p class="item-price">Item Price: $10</p>
        </div>
        <input type="button" value="+" class="increment" />
        <label class="display" data-product-id="" id=""> 3</label>
        <input type="button" value="-" class="decrement" />
        <button class="delete" type="button" class="btn btn-success">
          Delete
        </button>
        <button class="update" type="button" class="btn btn-success">
          Update
        </button>
      </div>

      <div class="menu_display">
        <div class="aside"><img class="user" src="ITEM IMAGE" /></div>
        <div class="menu_info">
          <p class="item-name">Item Price: Dish2</p>
          <p class="item-price">Item Price: $20</p>
        </div>
        <input type="button" value="+" class="increment" />
        <label class="display" data-product-id="" id=""> 2</label>
        <input type="button" value="-" class="decrement" />
        <button class="delete" type="button" class="btn btn-success">
          Delete
        </button>
        <button class="update" type="button" class="btn btn-success">
          Update
        </button>
      </div>

      <div class="menu_display">
        <div class="col">
          <p id="totalprice"><strong><h5>Order Total : $200 </h5></strong></p>
        </div>
        <button
          type="button"
          class="btn btn-success"
          id="place-order"
          href="/confirmation"
        >
          Place Order
        </button>
      </div>
    </div>
  </body>
</html>
